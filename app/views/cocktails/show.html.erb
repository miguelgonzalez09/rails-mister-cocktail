<div class="container">
    <h1>Cocktail Recipe 🍸</h1>
  
    <%= link_to "Back to all cocktails", cocktails_path %>
    
    <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>
    <h2><%= @cocktail.name %></h2>

    <% @cocktail.doses.each do |dose|%>
    <li><%= dose.description %></li>
    <li><%= dose.ingredient.name %></li>
    <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }%>
    <% end %>
    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
</div>  